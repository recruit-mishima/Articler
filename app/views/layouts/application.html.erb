<!DOCTYPE html>
<html>
<head>
  <title>Articler2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<header class="header">
    <div class="header__bar row">
      <h1 class="grid-6"><a href="/">Articler</a></h1>
      <% if user_signed_in? %>
      <div class="user_nav grid-6">
      <span><%= current_user.username %>
         <ul class="user__info">
           <li>
             <a href="/users/<%= current_user.id %>">My page</a>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
           </li>
          </ul>
      </span>
          <a class="search" href="/top">Search Articles</a>
        </div>
      <% else %>
        <div class="grid-6">
          <%= link_to "Log In",new_user_session_path, class: 'post' %>
          <%= link_to "New Account", new_user_registration_path, class: 'post' %>
        </div>
      <% end %>
    </div>
  </header>
<body>

<%= yield %>

</body>
</html>
